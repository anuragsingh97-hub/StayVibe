<% layout('layouts/boilerplate') -%>
<body>
    <div class="row">
        <div class="col-8  offset-2">
            <h4>Edit your listing</h4>
            <form method="post" action="/listings/<%=listing._id %>?_method=PUT">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input type="text" value=<%=listing.title%> class="form-control">
                </div>
        
                <div class="mb-3">
                    <label for="description" class="form-lable">Title</label>
                    <textarea name="listing[description]" rows="5" cols="10" class="form-control"><%=listing.description %></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-lable">Image/URL</label>
                    <input type="text" value=<%=listing.image.url%> name="listing[image][url]" class="form-control">
                </div>
                <div class="row">
                        <div class="mb-3 col-4">
                    <label for="price" class="form-lable">Price</label>
                    <input type="number" value=<%=listing.price%> name="listing[price]" class="form-control">
                </div>

                <div class="mb-3 col-8">
                    <label for="location" class="form-lable">Location</label>
                    <input type="text" value=<%=listing.location%> name="listing[location]" class="form-control">
                </div>
                </div>
                <div class="mb-3">
                    <label for="country" class="form-lable">Country</label>
                    <input type="text" value=<%=listing.country%> name="listing[country]" class="form-control">
                </div>

                <button class="btn btn-dark add-btn">Edit</button>
            </form>
    </div>
    </div>
</body>
<% layout('layouts/boilerplate') -%>
<body>
    <div class="row">
        <div class="col-8  offset-2">
            <h2>Create New Listing</h2>
    <form method="post" action="/listings">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input type="text" name="listing[title]" class="form-control" placeholder="Add title">
        </div>
        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea name="listing[description] "
            class="form-control" placeholder="Description"></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-lable">Image/link</label>
            <input type="text" name="listing[image]" class="form-control" placeholder="Enter image URL/Link">
        </div>
        <div class="row">
            <div class="mb-3 col-4">
            <label for="price" class="form-lable">Price</label>
            <input type="number" placeholder="1200" name="listing[price]" class="form-control" >
            </div>
            <div class="mb-3 col-8">
            <label for="location" class="form-lable">Location</label>
            <input type="text" placeholder="Utter Pradesh" name="listing[location]" class="form-control">
            </div>
        </div>
        
        <div class="mb-3">
            <label for="country" class="form-lable">Country</label>
            <input type="text" placeholder="India" name="listing[country]" class="form-control">
        </div>

        <button class="btn btn-dark add-btn">add</button>
        <br><br>
        
    </form>
    </div>
    </div>
</body>